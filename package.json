{
  "name": "ink-prompt",
  "version": "0.1.6",
  "description": "A React Ink component for prompts",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "release": "bash scripts/release.sh"
  },
  "keywords": [
    "ink",
    "react",
    "prompt",
    "cli"
  ],
  "author": "Duc Nguyen",
  "license": "MIT",
  "repository": "github:qduc/ink-prompt",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "ink": "^4.0.0 || ^5.0.0 || ^6.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@vitest/ui": "^4.0.15",
    "happy-dom": "^20.0.11",
    "ink": "^6.5.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.15"
  }
}
